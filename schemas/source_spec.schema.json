{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fodezy.dev/schemas/source_spec.schema.json",
  "title": "SourceSpec",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "problem"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string" },
        "description": { "type": ["string", "null"] }
      }
    },
    "problem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["statement"],
      "properties": {
        "statement": { "type": "string", "minLength": 10 },
        "context": { "type": ["string", "null"] }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "offline_ok": { "type": "boolean" },
        "budget_tokens": { "type": "integer", "minimum": 1 },
        "max_duration_minutes": { "type": "integer", "minimum": 1 }
      }
    },
    "success_metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "metrics": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "diagram_scope": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "include_sequence": { "type": "boolean" },
        "include_lifecycle": { "type": "boolean" },
        "include_architecture": { "type": "boolean" }
      }
    },
    "contracts_data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "generate_schemas": { "type": "boolean" },
        "api_specs": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "test_strategy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "unit_tests": { "type": "boolean" },
        "integration_tests": { "type": "boolean" },
        "e2e_tests": { "type": "boolean" }
      }
    },
    "operations": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ci_cd": { "type": "boolean" },
        "monitoring": { "type": "boolean" },
        "logging": { "type": "boolean" }
      }
    },
    "export": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "formats": {
          "type": "array",
          "items": { "type": "string" }
        },
        "bundle": { "type": "boolean" }
      }
    }
  }
}