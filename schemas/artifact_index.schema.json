{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fodezy.dev/schemas/artifact_index.schema.json",
  "title": "ArtifactIndex",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "generated_at", "artifacts"],
  "properties": {
    "manifest_version": { "type": "string", "default": "1" },
    "run_id": { "type": "string", "minLength": 1 },
    "generated_at": { "type": "string", "format": "date-time" },
    "template_set": { "type": "string" },
    "template_commit": { "type": "string" },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "purpose", "pack", "path", "sha256"],
        "properties": {
          "name": { "type": "string" },
          "purpose": { "type": "string" },
          "pack": { "type": "string", "enum": ["balanced", "deep"] },
          "path": { "type": "string" },
          "content_type": { "type": "string" },
          "bytes": { "type": "integer", "minimum": 0 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    }
  }
}